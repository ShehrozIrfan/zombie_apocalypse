<% provide(:title, "Update Profile") %>
<!Doctype html>
<html>
    <head><title><%= yield(:title) %></title></head>
    <body>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-md-offset-3">
                    <h2 class="text-center">Update Profile</h2>
                    <%= form_with(model: @survival, local: true) do |f| %>
                        <%= f.label "Change Picture" %>
                        <%= f.file_field :avatar, class: "form-control mb-2"%>

                        <%= f.submit "Update Profile", class: "btn btn-warning form-control mt-3" %>
                        <%= link_to "Back", survival_path(current_user.id), class: "btn btn-secondary form-control mt-3" %>
                    <% end %>
                </div>
            </div>
        </div>
    </body>
</html>
