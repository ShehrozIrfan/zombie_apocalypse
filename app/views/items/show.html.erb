<% provide(:title, "My Items") %>
<!Doctype html>
<html>
    <head><title><%= yield(:title) %></title></head>
    <body>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-sm-12 col-xs-12 table-responsive col-md-offset-3">
                    <h2 class="text-center">My Items</h2>
                    <table class="table table-striped">
                        <tbody>
                        <tr>
                            <td class="table-dark">Fiji Water</td>
                            <td><%= @item.fiji_water %></td>
                        </tr>
                        <tr>
                            <td class="table-dark">Campbell Soup</td>
                            <td><%= @item.campbell_soup %></td>
                        </tr>
                        <tr>
                            <td class="table-dark">First Aid Pouch</td>
                            <td><%= @item.first_aid_pouch %></td>
                        </tr>
                        <tr>
                            <td class="table-dark">AK47</td>
                            <td><%= @item.ak %></td>
                        </tr>
                        <tr>
                            <td colspan="2"><%= link_to "Go to survivals", survivals_path, class: "btn btn-secondary" %></td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>
